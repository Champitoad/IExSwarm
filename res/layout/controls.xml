<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        >
        <RadioButton
            android:id="@+id/rotateLeftRadioButton"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            />
        <ProgressBar
            android:id="@+id/xBackwardSpeedProgressBar"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:max="500"
            android:progress="0"
            android:minWidth="150dp"
            android:minHeight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ProgressBar
            android:id="@+id/xForwardSpeedProgressBar"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:max="500"
            android:progress="0"
            android:minWidth="150dp"
            android:minHeight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/rotateRightRadioButton"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
	<Switch
        android:id="@+id/accelSwitch"
        android:text="Accelerometer"
        android:checked="true"
        android:switchPadding="14.5sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
		android:onClick="onAccelSwitchChanged"
		/>
    <Button
        android:id="@+id/disconnectButton"
        android:text="Disconnect"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:onClick="disconnect"
        />
</LinearLayout>
